<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.CodeLingo.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <style name="Theme.CodeLingo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="textInputStyle">@style/Widget.CodeLingo.TextInputLayout</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>
</resources>